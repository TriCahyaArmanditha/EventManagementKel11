<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroundscreen"
    android:gravity="center"
    android:id="@+id/main_user">

    <!-- Login as User Button -->
    <ImageButton
        android:id="@+id/btnLoginUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/loginuser"
        android:contentDescription="Login as User"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/loginUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as User"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="#003366"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:fontFamily="sans-serif-medium" />

    <!-- Login as Admin Button -->
    <ImageButton
        android:id="@+id/btnLoginAdmin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/loginadmin"
        android:contentDescription="Login as Admin"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/loginAdminText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Admin"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/darkpink"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
