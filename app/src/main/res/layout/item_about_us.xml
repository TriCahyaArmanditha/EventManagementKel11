<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <!-- Konten CardView di sini -->

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#785D5656">

        <!-- Image for the person -->
        <ImageView
            android:id="@+id/photo_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fotoicha"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Photo"/>

        <!-- Name and university information -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name_textview"
                android:text="Tri Cahya Armanditha"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/university_textview"
                android:text="Universitas Bahaudin Mudhary"
                android:textSize="20sp"
                android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
